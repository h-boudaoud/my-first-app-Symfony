<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    {#      the view title      #}
    <title>{% block title %}Welcome!{% endblock %}</title>

    {% block styleScripteFiles %}
    {% endblock %}
    <link rel="stylesheet"
          href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
          integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
          crossorigin="anonymous">

    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://kit.fontawesome.com/4f1b76d32c.js" crossorigin="anonymous"></script>

    <style>
        :root, html, body {
            margin: 0;
            padding: 0;
            width: 100%;
        / / height: 100 %;
            background-color: #222222;
        }

        body > section {
            margin: 0;
            padding: 0;
            width: 98%;
            overflow: auto;
            min-height: 90vh;
        }

        #leftNavbar {
            margin: 0;
            padding: 1rem 0 0 0 !important;
            background-color: #222222;
            color: white;
        }

        header, footer {
            color: white;
            background-color: #222222;
        }

        header h1, footer {
            text-align: center;
        }

        #navigationLeft a, header a, footer a {
            text-decoration: none;
            color: white;
            background-color: #222222;
        }

        #navigationLeft a.dropdown-item:hover {
            color: #222222;
            background-color: white;
        }


        {#      The view style sheet    #}
        {% block stylesheets %}{% endblock %}
    </style>


</head>
<body>
<header class="sticky-top">
    <div class="row">
        <div class="fixed-top col-1 d-lg-none navbar navbar-dark float-left mr-5 mt-0 bg-transparent d-inline">
            <button id="displayHeader_off"
                    onclick="changeDisplayHeader('off')"
                    class="navbar-toggler "
            >
                <span class="navbar-toggler-icon" style="color: white"></span>
                {#            <i class="fa fa-navicon d-block"></i>#}
                <i class="fa fa-angle-up" aria-hidden="true"></i>
            </button>
            <button id="displayHeader_on"
                    onclick="changeDisplayHeader('on')"
                    class="navbar-toggler" style="display: none"
            >
                <span class="navbar-toggler-icon" style="color: white"></span>
                {#            <i class="fa fa-navicon d-block"></i>#}
                <i class="fa fa-angle-down" aria-hidden="true"></i>
            </button>
        </div>
        <div class="col-10">
            <nav id="navHeader" style="width: 100%">
                <div class="d-inline-block float-lg-left float-right">
                    <div class=" navbar navbar-expand-lg navbar-dark bg-transparent my-0 mx-auto">

                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarContent"
                                aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon" style="color: white"></span> Menu
                        </button>

                        <div class="collapse navbar-collapse" id="navbarContent">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item active">
                                    <a class="nav-link" href="{{ path('home') }}">
                                        <i class="fas fa-home"></i>
                                        Home <span class="sr-only">(current)</span>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('articles') }}">
                                        <i class="far fa-list-alt"></i>
                                        Articles
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('categories') }}">
                                        <i class="far fa-list-alt"></i>
                                        Categories
                                    </a>
                                </li></li>
                                <li class="nav-item">
                                    <a class="nav-link ajax-categories" href="{{ path('categories_json') }}">
                                        <i class="far fa-list-alt"></i>
                                        Categories json
                                    </a>
                                </li>
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                       data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Dropdown
                                    </a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        <a class="dropdown-item" href="#">Action</a>
                                        <a class="dropdown-item" href="#">Another action</a>
                                        <div class="dropdown-divider"></div>
                                        <a class="dropdown-item" href="#">Something else here</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="d-inline-block float-right">
                    <div class=" navbar navbar-expand-lg navbar-dark bg-transparent my-0 mx-auto">

                        <button class="navbar-toggler" type="button" data-toggle="collapse"
                                data-target="#navbarConnextion"
                                aria-controls="navbarConnextion" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon" style="color: white"></span>
                        </button>

                        <div class="collapse navbar-collapse" id="navbarConnextion">
                            <ul class="navbar-nav mr-auto">

                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('login') }}">
                                        <i class="fa fa-unlock-alt" aria-hidden="true"></i>
                                        Login
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('logout') }}">
                                        <i class="fas fa-user-lock"></i>
                                        Logout
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('signup') }}">
                                        <i class="fa fa-user-plus" aria-hidden="true"></i>
                                        Signup
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
                <div class="d-inline-block">

                    <div class="collapse navbar-collapse" id="navbarform">

                        {#            <form class="form-inline my-2 my-lg-0">#}
                        {#                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">#}
                        {#                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>#}
                        {#            </form>#}
                    </div>
                </div>
            </nav>

            {#      the title h1 of the view   #}
            <h1><small>{% block h1 %}{% endblock %}</small></h1>

        </div>
    </div>
</header>
<section class="container-fluid bg-transparent">
    {% block body %}{% endblock %}
</section>
<footer class="fixed-bottom">
    footer
</footer>


<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
        crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
        integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
        crossorigin="anonymous"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
        integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
        crossorigin="anonymous"></script>


{% block scriptFiles %}{% endblock %}
<script>

    changeHeight()
    $(window).bind('resizeEnd', function () {
        console.log('change : ', $('body').height())
        changeHeight()
    })

    $(window).resize(function () {
        if (this.resizeTO) clearTimeout(this.resizeTO);
        this.resizeTO = setTimeout(function () {
            $(this).trigger('resizeEnd');
        }, 100);

    });

    function changeHeight() {
        //$("body > section").css('margin', ($("body > header").height()) + 'px 0' + ($("body > footer").height()) + 'px 0')
        $("#content, body > section").css('min-height', $('html').height() - ($('body > header').height() + $('body > footer').height() + 20) + 'px')
        //$("#content").css('height', $('windows').height() - ($('body > header').height() + $('body > footer').height() + 20) + 'px')
        //$("body").css('padding-top', ($("body > header").height()) + 'px')
        $("body").css('padding-bottum', ($("body > footer").height()) + 'px')

    }

    function changeDisplayHeader(message) {

        let header_display = 'none'
        let btn_display = '';

        if (message == 'on') {
            header_display = ''
            btn_display = 'none'
        }
        // masquerBarreAdresse(value)
        $("#navHeader, #displayHeader_off").css('display', header_display)
        $("#displayHeader_on").css('display', btn_display)


        changeHeight()
    }



    {#      The view JavaScript    #}
    {% block javascripts %}{% endblock %}

</script>
</body>
</html>
